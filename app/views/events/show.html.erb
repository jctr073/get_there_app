<div class="container">
  <div class="col-md-12">
    <h2 class="text-center">
      <%= @event['name']['text'] %> <br/>
      <small><%= long_datetime(@event['start']['local']) %></small>
    </h2>
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @event['name']['text'] %></dd>
      <dt>Category</dt>
      <% if !@event['category'].nil? %>
        <dd><%= @event['category']['name'] %></dd>
      <% else %>
        <dd>none</dd>
      <% end %>
      <dt>Description</dt>
      <dd><%= @event['description']['text'] %></dd>
      <dt>Venue</dt>
      <dd><%= @event['venue']['name'] %></dd>
      <dt>Address</dt>
      <dd>
        <%=	@event['venue']['address']['address_1'] %> <br/>
        <%=	@event['venue']['address']['city'] %>
        <%= @event['venue']['address']['region'] %>,
        <%= @event['venue']['address']['postal_code'] %>
      </dd>
    </dl>
  </div>
</div>

<pre><%= pp @event %></pre>